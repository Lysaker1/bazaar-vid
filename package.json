{
  "name": "bazaar-vid-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:main": "turbo dev --filter=@bazaar/main",
    "dev:admin": "turbo dev --filter=@bazaar/admin",
    "build": "turbo build",
    "build:main": "turbo build --filter=@bazaar/main",
    "build:admin": "turbo build --filter=@bazaar/admin",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "db:generate": "turbo db:generate",
    "db:migrate": "turbo db:migrate",
    "db:studio": "turbo db:studio"
  },
  "devDependencies": {
    "turbo": "^2.5.4"
  },
  "packageManager": "npm@10.9.0"
}