{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": true,

    /* Bundled projects */
    "lib": ["dom", "dom.iterable", "ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "plugins": [{ "name": "next" }],
    "incremental": true,

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@bundler/*": ["./packages/bundler/*"],
      "@r2/*": ["./packages/r2/*"]
    },
    
    /* Testing */
    "types": ["jest", "node"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
    ".next/types/**/*.ts",
    "src/app/dashboard/page.tsx",
    "remotion/webpack-override.mjs"

  ],
  "exclude": [
    "node_modules", 
    "remotion.config.ts", 
    "src/tests", 
    "**/__tests__/**", 
    "src/server/workers",
    "src/scripts/log-agent/dist",
    "src/scripts",
    "memory-bank/**",
    "public/custom-components_*.js"
  ]
}
