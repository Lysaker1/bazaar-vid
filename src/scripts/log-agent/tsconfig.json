{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": false, /* Allow implicit any to handle Express callbacks */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "lib": ["dom", "dom.iterable", "ES2022"],
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["../../../src/*"]
    }
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": ["node_modules"]
} 